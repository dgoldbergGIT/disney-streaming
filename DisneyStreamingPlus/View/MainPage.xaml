<Page
    x:Class="DisneyStreamingPlus.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:model="using:DisneyStreamingPlus.Model"
	xmlns:local="using:DisneyStreamingPlus.ViewModel"
	d:DataContext="{d:DesignInstance Type=local:MainPageViewModel}"
	mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<DataTemplate x:Key="imagesTemplate" x:DataType="model:Row">
			<StackPanel Orientation="Vertical">
				<TextBlock Text="{x:Bind Caption}" FontSize="12" Foreground="White" />
				<GridView ItemsSource="{x:Bind ImageUrls}" Margin="0,4,0,4">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Horizontal" />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate x:DataType="x:String">
							<Image Width="135" ImageFailed="Image_ImageFailed" Margin="2">
								<Image.Source>
									<BitmapImage UriSource="{x:Bind}"
												 DecodePixelWidth="135" />
								</Image.Source>
							</Image>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</GridView>
			</StackPanel>
		</DataTemplate>
	</Page.Resources>

	<Grid Background="Black">
		<ScrollViewer HorizontalScrollBarVisibility="Auto">
			<StackPanel>
				<ListView Visibility="{x:Bind ViewModel.Rows.IsSuccessfullyCompleted, Mode=OneWay}" ItemsSource="{x:Bind ViewModel.Rows.Result, Mode=OneWay}"
						  ItemTemplate="{StaticResource imagesTemplate}" Margin="10,20">
					<ItemsWrapGrid Orientation="Vertical">
					</ItemsWrapGrid>
				</ListView>
				<!-- Loading indicator -->
				<TextBlock Text="Loading..." Visibility="{x:Bind ViewModel.Rows.IsNotCompleted, Mode=OneWay}" />
				<!-- Error/Exception details -->
				<TextBlock Text="{x:Bind ViewModel.Rows.ErrorMessage, Mode=OneWay}" Foreground="Red" Visibility="{x:Bind ViewModel.Rows.IsFaulted, Mode=OneWay}" />
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Page>